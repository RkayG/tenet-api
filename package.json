{
  "name": "secure-api-handler-template",
  "version": "1.0.0",
  "description": "A comprehensive, secure API handler framework for multi-tenant systems with authentication, sanitization, encryption, rate limiting, caching, and observability",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node --transpile-only src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "docker:build": "docker build -t secure-api-handler .",
    "docker:run": "docker run -p 3000:3000 secure-api-handler",
    "docs": "typedoc src/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/secure-api-handler-template.git"
  },
  "keywords": [
    "api",
    "security",
    "multi-tenant",
    "authentication",
    "sanitization",
    "encryption",
    "rate-limiting",
    "caching",
    "typescript",
    "framework"
  ],
  "author": "Your Name",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yourusername/secure-api-handler-template/issues"
  },
  "homepage": "https://github.com/yourusername/secure-api-handler-template#readme",
  "dependencies": {
    "zod": "^3.22.4",
    "redis": "^4.6.8",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "sanitize-html": "^2.11.0",
    "dompurify": "^3.0.6",
    "joi": "^17.9.2",
    "uuid": "^9.0.1",
    "winston": "^3.10.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/uuid": "^9.0.7",
    "@types/cors": "^2.8.16",
    "@types/compression": "^1.7.5"
  },
  "devDependencies": {
    "@types/node": "^20.8.7",
    "@types/jest": "^29.5.5",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "eslint": "^8.51.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "typedoc": "^0.25.1",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "nodemon": "^3.0.1"
  },
  "peerDependencies": {
    "@supabase/supabase-js": "^2.38.4",
    "next": "^14.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}